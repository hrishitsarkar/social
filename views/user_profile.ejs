<link rel="stylesheet" href="/css/user_profile.css">

    <div class="profile">
        <div><img src="https://static.vecteezy.com/system/resources/previews/005/544/718/original/profile-icon-design-free-vector.jpg" alt=""></div>
        

        <% if(user.id == profile_user.id) { %>
            <!-- if user matches then show the form -->
            <div id="update-form">
                <form action="/users/update/<%= profile_user.id %>" method="post">

                    <input type="text" name="name" id="" placeholder="Your Name" value="<%= profile_user.name %>" required>
                    <input type="email" name="email" id="" placeholder="Your Email" value="<%= profile_user.email %>" required>
                    <input type="submit" value="Update">
                </form>
            </div>
        <% }else { %> 
            <!-- else only profile info -->
            <div id="details-list">
                <ul>
                    <li>
                        <b>Name</b> : <%= profile_user.name %>
                    </li>
                    <li>
                    <b>Email</b> : <%= profile_user.email %>
                    </li>
                    <li>
                        <b>Nationality</b> : Indian
                    </li>
                </ul>
            </div>
        <%} %>
    </div>

